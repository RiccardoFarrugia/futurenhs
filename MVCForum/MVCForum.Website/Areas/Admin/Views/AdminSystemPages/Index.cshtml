@using MvcForum.Core
@using MvcForum.Core.Constants
@using MvcForum.Web.Application.ExtensionMethods
@model IEnumerable<MvcForum.Core.Models.SystemPages.SystemPageViewModel>
@{
	ViewBag.Title = "System Pages";
}
<div class="mainadminbody">
	<div class="topadminsubnav">
		<div class="btn-group" role="group">
			<a href="@Url.Action("Create")" role="button" class="btn-mvc-green">Create new page</a>
		</div>
	</div>
	<div class="panel">
		<div class="panel-heading">
			<h5>@ViewBag.Title</h5>
		</div>
		<div class="panel-content">
			<table class="table table-bordered table-striped">
				<thead>
					<tr>
						<th>Edit</th>
						<th>Title</th>
						<th>Slug</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var page in Model)
					{
						<tr>
							<td>
								<a href="@Url.Action("Edit", new { page.Id })" class="btn-mvc">
									<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
								</a>
							</td>
							<td>
								<strong>@Html.DisplayFor(modelItem => page.Title)</strong>
							</td>
							<td>
								@Html.DisplayFor(modelItem => page.Slug)
							</td>

						</tr>
					}
				</tbody>
			</table>

		</div>
	</div>
</div>


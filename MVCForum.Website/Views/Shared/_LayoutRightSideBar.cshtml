@{
    Layout = "_Layout.cshtml";
}

@section SocialMeta{
    @RenderSection("SocialMeta", false)
}

@section Header {
    @RenderSection("Header", false)
}
<div class="c-grid-block">
    <div class="c-grid-block_item l-col-12 l-col-9-d">
        <main>
            @RenderBody()
        </main>
    </div>
    <div class="c-grid-block_item l-col-12 l-col-3-d sidelayoutsection">
        <div class="main-side-box clearfix">
            <h2 class="u-visually-hidden">Filters</h2>
            
            @if (User.Identity.IsAuthenticated)
            {
                @Html.Action("CreateTopicButton", "Topic")
            }
            @RenderSection("side", false)
        </div>
    </div>
</div>

@section Footer {
    @RenderSection("Footer", false)
}    
@model MvcForum.Core.Models.Collabora.FileServerResponse

<div class="c-grid-block">
	<div class="c-grid-block_item l-col-12">
		<div class="u-padding-top-spacing-2 u-padding-bottom-spacing-2 u-margin-bottom-spacing-5 u-bg-theme-1">


			<form action="@Model.WopiClientUrlForFile" enctype="multipart/form-data" method="post">
				<input name="access_token" value="@Model.AccessToken" type="hidden">
				<input type="submit" value="View Document">
			</form>
			<form action="@Model.WopiClientUrlForFile" enctype="multipart/form-data" method="post" target="collabora_host_frame">
				<input name="access_token" value="@Model.AccessToken" type="hidden">
				<input type="submit" value="View Document in iFrame">
			</form>
			<form action="@Model.WopiClientUrlForFile" enctype="multipart/form-data" method="post" target="_blank">
				<input name="access_token" value="@Model.AccessToken" type="hidden">
				<input type="submit" value="View Document in new Window">
			</form>
			<iframe name="collabora_host_frame" allowfullscreen=""  onload="resizeIframe(this)" width="100%" height="100%">
			</iframe>

		</div>
	</div>
</div>
